@page "/play-game/{Id:int}"

<PageTitle>Play Game</PageTitle>

@if (Game != null) 
{
    <h1>Enter details for a game of @GameName()</h1>

    <div class="container">
        <form @onsubmit="SendPlayedGame">
            <div class="form-group">
                <label for="players">How Many Players?</label>
                <input type="number" class="form-control" id="players" placeholder="###" @bind="GamePlayed.Players">
            </div>
            <div class="form-group">
                <label for="winner">Who Won?</label>
                <input type="text" class="form-control" id="winner" placeholder="Probably Me" @bind="GamePlayed.Winner">
            </div>
            <div class="comments">
                <label for="comments">Anything you want to make note of about this game?</label>
                <input type="text" class="form-control" id="comments" placeholder="Maybe something stood out about this game? Did someone win by a landslide?" @bind="GamePlayed.Comments">
            </div>
            <button type="submit" class="btn btn-primary">
                Submit Game Played
            </button>
        </form>
    </div>
}
else
{
    <p>Loading...</p>
}
